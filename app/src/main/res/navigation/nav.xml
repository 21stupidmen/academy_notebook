<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/logFragment">

    <fragment
        android:id="@+id/regFragment"
        android:name="com.example.academy_notebook.RegFragment"
        android:label="fragment_reg"
        tools:layout="@layout/fragment_reg" >
        <action
            android:id="@+id/action_regFragment_to_logFragment"
            app:destination="@id/logFragment" />
    </fragment>
    <fragment
        android:id="@+id/logFragment"
        android:name="com.example.academy_notebook.logFragment"
        android:label="fragment_log"
        tools:layout="@layout/fragment_log" >
        <action
            android:id="@+id/action_logFragment_to_regFragment"
            app:destination="@id/regFragment" />
        <action
            android:id="@+id/action_logFragment_to_mainappFragment2"
            app:destination="@id/mainappFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainappFragment"
        android:name="com.example.academy_notebook.mainappFragment"
        android:label="fragment_mainapp"
        tools:layout="@layout/fragment_mainapp" >
        <action
            android:id="@+id/action_mainappFragment_to_logFragment2"
            app:destination="@id/logFragment" />
    </fragment>
</navigation>